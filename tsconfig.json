{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2017",
        "module": "commonjs",
        "removeComments": true,
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
